pipeline {
  agent { label 'docker'}
  environment {
    DOCKERHUB_CRED = 'dockerhub_samok'
    imageName= ''
    tag= 'latest'
    pathBuild=''
    pathPrefix='./agent-'
    pathSuffix='/build/'
    buildArgDocker=''
    ImageNamePrefix='samok/jenkins-agent-'
  }
  stages {
    stage('Select Image') {
      steps {
        script {
          pathBuild="${pathPrefix}${SELECTED_AGENT}${pathSuffix}"
          imageName="${ImageNamePrefix}${SELECTED_AGENT}"
          if(SELECTED_AGENT == 'docker') {
            buildArgDocker='--build-arg GID=\$(getent group docker | cut -d: -f3) '
          }
        }
      }
    }
    stage('Build Image') {
      steps {
        script {
            dockerImage = docker.build ("${imageName}:${tag}", "--no-cache --rm ${pathBuild}")
        }
      }
    }
    stage('Push Image') {
      steps {
        script {
          docker.withRegistry('', DOCKERHUB_CRED) {
            dockerImage.push()
          }
        }
      }
    }
  }
}